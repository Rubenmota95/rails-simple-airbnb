<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'example: Light & Spacious Garden Flat London' %>
    <%= f.input :address, placeholder: 'example: 889 German Stravenue, West Debbie, PA 29487-0768' %>
    <%= f.input :description, placeholder: 'A bit more about this flat...' %>
    <%= f.input :price_per_night, placeholder: 'Price of the flat' %>
    <%= f.input :number_of_guests, placeholder: 'Number of people' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
